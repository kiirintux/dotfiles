icon-next = ‚è≠

label-song-maxlen = 35
label-song-ellipsis = true
label-song = ùÑû %title%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "ÓÄ¶ "
label = %percentage%%

[module/date]
type = internal/date
interval = 5
date = %a %m %H:%M

[module/battery]
type = internal/battery
